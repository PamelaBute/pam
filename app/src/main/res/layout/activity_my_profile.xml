<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyProfile">

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"

        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to my Profile"
        android:layout_centerHorizontal="true"
        android:textSize="20pt"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="300px"
        app:srcCompat="@drawable/pic"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pamela Bute"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20px"
        android:textSize="24pt"

        />
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_gravity="center"
        android:layout_marginTop="20px"
        android:background="#000"
        android:layout_below="@+id/textView4"
        />

    <TextView
        android:id="@+id/track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track: Android"
        android:layout_below="@+id/divider"
        android:layout_alignLeft="@id/track"
        android:layout_marginTop="20px"
        android:textSize="14pt"

        />

    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country: Zimbabwe"
        android:layout_below="@+id/track"
        android:layout_alignLeft="@id/track"
        android:layout_marginTop="20px"
        android:textSize="14pt"

        />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: pamelabute02.com"
        android:layout_below="@+id/country"
        android:layout_alignLeft="@id/track"
        android:layout_marginTop="20px"
        android:textSize="14pt"

        />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="phone: +263718180964"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@id/track"
        android:layout_marginTop="20px"
        android:textSize="14pt"

        />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slack Username: Pamela Bute"
        android:layout_below="@+id/phone"
        android:layout_alignLeft="@id/track"
        android:layout_marginTop="20px"
        android:textSize="14pt"

        />
</RelativeLayout>